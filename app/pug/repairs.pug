                    .col-xl-4
                        .reviews_block
                            .reviews_block_content
                                iframe(width="100%" height="100%" src="https://www.youtube-nocookie.com/embed/VWAp82yKohw?controls=0" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
